{
  "name": "snapdb",
  "version": "1.0.0",
  "description": "A fast, lightweight, Redis-like in-memory database for Node.js with plugin and middleware support. Perfect for ephemeral data, rate limiting, OTPs, tokens, and more.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "prepare": "npm run build"
  },
  "keywords": [
    "in-memory",
    "database",
    "redis",
    "ephemeral",
    "ttl",
    "rate-limiting",
    "otp",
    "token",
    "session",
    "feature-flag",
    "nodejs",
    "typescript",
    "plugin",
    "middleware",
    "npm-package",
    "lightweight",
    "fast",
    "cache",
    "nosql"
  ],
  "author": "Abhilash N <abhilash@example.com>",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.10",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fullstack-dopamine/snapdb.git"
  },
  "homepage": "https://github.com/fullstack-dopamine/snapdb#readme",
  "bugs": {
    "url": "https://github.com/fullstack-dopamine/snapdb/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/fullstack-dopamine"
  }
}